@model Actor

@{
    ViewData["Title"] = "Actor Delete";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confiremation for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">              
                    <div class="form-group">
                        <label asp-for="ProfilePicture" class="control-label"></label>
                        <input asp-for="ProfilePicture" class="form-control" readonly/>
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly/>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete" >
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                        </form>                     
                        <a asp-action="Index" class="btn brn-outline-secondary">Show All</a>
                    </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePicture").val();
        })
        </script>
    }
